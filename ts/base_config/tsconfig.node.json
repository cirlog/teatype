{
    // Compiler configuration options for TypeScript
    "compilerOptions": {
        // Path to the incremental build cache file for faster rebuilds
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        // Target ECMAScript version for compiled output
        "target": "ES2022",
        // Standard library definitions to include in compilation
        "lib": ["ES2023"],
        // Module format for generated code
        "module": "ESNext",
        // Skip type checking of declaration files for faster compilation
        "skipLibCheck": true,

        // Use modern module resolution strategy optimized for bundlers
        "moduleResolution": "Bundler",
        // Allow importing TypeScript files with .ts extensions directly
        "allowImportingTsExtensions": true,
        // Transpile each file independently without cross-file references
        "isolatedModules": true,
        // Automatically detect module format from file content
        "moduleDetection": "force",
        // Do not emit compiled JavaScript files (type-checking only)
        "noEmit": true,

        // Enable all strict type-checking options for maximum safety
        "strict": true,
        // Report errors for declared but unused local variables
        "noUnusedLocals": true,
        // Report errors for unused function parameters
        "noUnusedParameters": true,
        // Require explicit handling of all switch statement cases
        "noFallthroughCasesInSwitch": true,
        // Warn about imports with unanalyzed side effects
        "noUncheckedSideEffectImports": true
    },
    // Files to include in TypeScript compilation
    "include": ["vite.config.ts"]
}

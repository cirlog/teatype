# Third-party imports
from teatype.cli import BaseCLI
from teatype.io import softkill
from teatype.logging import *

class Softkill(BaseCLI):
    def meta(self):
        return {
            'name': 'softkill',
            'shorthand': 'sk',
            'help': 'Soft-kill specified processes by name.',
            'arguments': [
                {
                    'name': 'process-names',
                    'help': 'Names of the processes to be soft-killed, separated by commas.',
                    'required': True
                }
            ],
        }

    def execute(self):
        try:
            process_names = [name.strip() for name in self.get_argument('process-names').split(',')]
            softkill(process_names)
        except Exception:
            err(f"An error occurred while attempting to soft-kill processes", traceback=True)
            
if __name__ == '__main__':
    Softkill()
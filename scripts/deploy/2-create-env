workspace_directory=$(dirname "$(readlink -f "$0")") # teatype/scripts/deploy
parent_directory=$(dirname "$workspace_directory") # teatype/scripts
grandparent_directory=$(dirname "$parent_directory") # teatype
. "$grandparent_directory/util/bash-helper.sh"

env_path="$grandparent_directory/.env"
cp "$grandparent_directory/.env.template" "$env_path"
if $(uname -r | grep -q "WSL"); then
    echo "Detected WSL instance. Setting flag in .env"
    write_env_variable "$grandparent_directory/.env" "USING_WSL" "true"
    if [ -n "$WSL_DISTRO_NAME" ]; then
        echo "Detected WSL profile: "$WSL_DISTRO_NAME". Writing to .env"
        write_env_variable "$grandparent_directory/.env" "WSL_TARGET_PROFILE" "$WSL_DISTRO_NAME"
    fi
else
    echo "Not running inside WSL. Setting flag in .env"
    write_env_variable "$grandparent_directory/.env" "USING_WSL" "false"
fi

cli_path="$grandparent_directory/cli"
python_path="$grandparent_directory/py"
typescript_path="$grandparent_directory/ts"

write_env_variable "$env_path" "TEATYPE_CLI_PATH" "$cli_path" 
write_env_variable "$env_path" "TEATYPE_PYTHON_PATH" "$python_path" 
write_env_variable "$env_path" "TEATYPE_TYPESCRIPT_PATH" "$typescript_path" 
write_env_variable "$env_path" "TEATYPE_WORKSPACE_PATH" "$grandparent_directory"
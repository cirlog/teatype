{
    // TypeScript compiler configuration for the application build
    "compilerOptions": {
        // Path where TypeScript stores incremental build information for faster rebuilds
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        // Target ECMAScript version - ES2020 provides modern JavaScript features
        "target": "ES2020",
        // Use standard JavaScript class field initialization instead of TypeScript's defineProperty
        "useDefineForClassFields": true,
        // Include ES2020 standard library, DOM APIs, and DOM iterable interfaces
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        // Output module format - ESNext allows bundlers to apply tree-shaking and code splitting
        "module": "ESNext",
        // Skip type checking of declaration files to improve compilation speed
        "skipLibCheck": true,

        // Use Bundler resolution strategy for better compatibility with modern bundlers
        "moduleResolution": "Bundler",
        // Allow importing .ts files directly (used with Bundler resolution)
        "allowImportingTsExtensions": true,
        // Emit files for each module independently to improve isolation and build speed
        "isolatedModules": true,
        // Automatically detect module format instead of relying on file extension
        "moduleDetection": "force",
        // Don't emit compiled JavaScript files (let the bundler handle compilation)
        "noEmit": true,
        // Use React 17+ automatic JSX transform without needing React in scope
        "jsx": "react-jsx",

        // Enable all strict type checking options for maximum type safety
        "strict": true,
        // Report errors when local variables are declared but never used
        "noUnusedLocals": true,
        // Report errors when function parameters are declared but never used
        "noUnusedParameters": true,
        // Ensure all switch statement cases either return or explicitly fall through
        "noFallthroughCasesInSwitch": true,
        // Warn about imports that may have side effects and aren't explicitly used
        "noUncheckedSideEffectImports": true,

        // Path mapping for cleaner imports - @/* maps to the root ts directory
        "paths": { "@/*": ["../../*"] }
    },
    // Files and directories to include in the compilation
    "include": ["src", "**/*.ts", "typings"]
}

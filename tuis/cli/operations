# Standard-library imports
import json

# Third-party imports
import redis
from teatype.cli import BaseTUI
from teatype.enum import EscapeColor
from teatype.io import prompt
from teatype.logging import *
from teatype.modulo import __MODULO_IMPORT_ERROR__, __MODULO_SUPPORT__

if __MODULO_SUPPORT__:
    from teatype.modulo import LaunchPad, ModuloOperations, parse_designation
    
class Operations(BaseTUI):
    NOT_AVAILABLE=not __MODULO_SUPPORT__
    NOT_AVAILABLE_REASON=__MODULO_IMPORT_ERROR__
    
    def meta(self):
        return {
            'name': 'operations',
            'shorthand': 'op',
            'help': 'Teatype Modulo operations interface',
            'actions': [
                {
                    'name': 'dispatch',
                    'help': 'Dispatch commands to a Modulo units.'
                },
                {
                    'name': 'check',
                    'help': 'Check the status of a Modulo unit.',
                    'option_name': 'unit-id',
                    'option': str
                },
                {
                    'name': 'fire',
                    'help': 'Use Launchpad to fire up a Modulo unit.'
                },
                {
                    'name': 'kill',
                    'help': 'Terminate a running Modulo unit.',
                    'option_name': 'unit-id',
                    'option': str  
                },
                {
                    'name': 'list',
                    'help': 'List all available and running Modulo units.'
                }
            ]
        }
        
    def dispatch(self):
        receiver = prompt('Enter the ID of the Modulo unit to dispatch command to:',
                          return_input=True)
        command = prompt('Enter the command to dispatch to the Modulo unit:',
                         return_input=True)
        payload = prompt('Enter any additional payload data (or leave blank):',
                         return_input=True)
        is_async = prompt('Dispatch command asynchronously?')

        if payload == '':
            payload = None
        try:
            if payload != None:
                payload = json.loads(payload)
        except:
            pass
        
        self.operations.dispatch(id=receiver, command=command, payload=payload)
            
        return f'Dispatched command to Modulo unit {receiver}.'
        
    def fire(self):
        unit_type = prompt('Which Modulo unit would you like to launch?',
                            choices=['backend', 'service', 'workhorse'],
                            return_input=True)
        unit_name = prompt(f'Enter the name of the {unit_type} unit to launch:',
                           return_input=True)
        LaunchPad.fire(unit_name, unit_type)
        return f'Launched {unit_type} unit: {unit_name}'
        
    def list(self):
        units = self.operations.list()
        n_units = len(units)
        list_string = ''
        if n_units == 0:
            list_string += f'{EscapeColor.LIGHT_YELLOW}No Modulo units found.'
        else:
            list_string += f'{EscapeColor.LIGHT_GREEN}Found {EscapeColor.RESET}{len(units)}{EscapeColor.LIGHT_GREEN} Modulo units:\n'
            list_string += '\n'
            
        for unit in units:
            designation = unit.get('designation')
            info = parse_designation(designation)
            list_string += f'   {info["type"]}-unit:\n'
            list_string += f'       {EscapeColor.MAGENTA}Name:        {EscapeColor.CYAN}{info["name"]}\n'
            list_string += f'       {EscapeColor.MAGENTA}ID:          {EscapeColor.CYAN}{info["id"]}\n'
            list_string += f'       {EscapeColor.MAGENTA}Pod:         {EscapeColor.CYAN}{info["pod"]}\n'
            list_string += f'       {EscapeColor.MAGENTA}Type:        {EscapeColor.CYAN}{info["type"]}\n'
            list_string += f'       {EscapeColor.MAGENTA}Designation: {EscapeColor.CYAN}{designation}\n'
            list_string += '\n'
        return list_string
        
    def pre_execute(self):
        try:
            redis.Redis().ping()
        except:
            println()
            err('Cannot connect to Redis server. Please run the redis server with `tt redis start` before using Modulo operations.',
                exit=True,
                pad_after=1,
                verbose=False)
            
        self.operations = ModuloOperations()
        
    def on_prompt(self, user_input:str, option:any=None) -> str:
        try:
            match user_input:
                case 'dispatch':
                    return self.dispatch()
                case 'fire':
                    return self.fire()
                case 'kill':
                    return 'Sent kill command to unit.' if self.operations.kill(id=option) else 'Failed to send kill command.'
                case 'list':
                    return self.list()
            return None
        except KeyboardInterrupt:
            return None

if __name__ == '__main__':
    Operations()